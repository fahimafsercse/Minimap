
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>

    <!-- Linking CSS -->
    <head>
        <title></title>
        <!-- Linking Custom CSS -->

        <link href="~/Resources/css/main.css" rel="stylesheet" />
        <link href="~/Resources/FontAwesome/web-fonts-with-css/css/fontawesome-all.css" rel="stylesheet" />

        <!-- Linking Bootstrap  -->
        <link href="~/Resources/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    </head>
    <body>
        <div id="topNav">
            <div class="container">
                <div class="navbar row">
                    <div class="col-md-3">
                        <center>
                            <font size="5" color="white"><i class="fas fa-map-marker-alt"></i> MiniMap</font>
                        </center>
                    </div>

                    <div class="col-md-1 col-6 ">
                        <a href="Registration">
                            <button class="btn btn-light" type="button">
                                <font color="red">Sign Up</font>
                            </button>
                        </a>
                    </div>


                </div>
            </div>
        </div>

        <div class="container" style="padding-top: 70px;">
            <div class="row">
                <div class="col-md-7 " style="padding: 100px;">
                    <img src="~/Resources/image/login.png" width="400px" class="img-fluid" />
                </div>
                <div class="col-md-5 ">
                    <div class="customDiv" style="padding: 40px;box-shadow: 10px 10px 50px #FF9595">
                        <center>
                            <font face="Roboto" size="5">Welcome to MiniMap</font>
                        </center>

                        <br>
                        <form action="VerifyLogin" method="post">
                            <b>

                                <div class="form-group">
                                    <label for="pwd">Username :</label>
                                    <input type="text" class="form-control" name="Username" id="Username">
                                </div>

                                <div class="form-group">
                                    <label for="pwd">Password</label>
                                    <input type="password" name="Password" class="form-control" id="Password">
                                </div>


                                <div class="form-check" style="text-align: right;">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Remember Me
                                    </label>
                                </div>
                            </b>

                            <a href="#">Forgot Password ?</a>


                            <br><br>

                            <input type="submit" class="btn btn-block bClass RedButton" name="name" value="Login" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>